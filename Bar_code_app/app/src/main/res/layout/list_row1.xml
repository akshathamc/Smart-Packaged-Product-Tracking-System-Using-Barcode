<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"


    android:orientation="horizontal"
    android:padding="5dip">


    <ImageView
        android:id="@+id/iv"
        android:layout_width="124dp"
        android:layout_height="113dp"
        app:srcCompat="@drawable/button" />

    <TextView
        android:id="@+id/title"
        android:layout_width="298dp"
        android:layout_height="308dp"


        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-19dp"
        android:gravity="center"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/ivp"
        android:layout_width="40dp"
        android:layout_height="59dp"
        android:layout_below="@id/iv"
        app:srcCompat="@drawable/m" />

    <ImageView
        android:id="@+id/ivm"
        android:layout_width="43dp"
        android:layout_height="61dp"
        android:layout_below="@id/tv1"
        app:srcCompat="@drawable/p" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="73dp"
        android:layout_height="39dp"
        android:layout_below="@id/ivp"
        android:layout_marginTop="2dp"
        android:text="0" />

    <Button
        android:id="@+id/b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivm"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button"
        android:backgroundTint="#E63946"
        android:fontFamily="@font/boltsemibold"
        android:text="Update Quantity"
        android:textAlignment="center"
        android:textColor="#fafafa"
        android:textSize="21sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/m" />

    <TextView
        android:id="@+id/title1"
        android:layout_width="425dp"
        android:layout_height="31dp"

        android:layout_below="@id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-19dp"
        android:gravity="center"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans" />
    <Button
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title1"
        android:background="@drawable/button"
        android:backgroundTint="#E63946"
        android:fontFamily="@font/boltsemibold"
        android:text="Extends Days"
        android:textAlignment="center"
        android:textColor="#fafafa"
        android:textSize="21sp" />
</RelativeLayout>