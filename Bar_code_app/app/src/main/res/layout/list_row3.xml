<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"


    android:orientation="horizontal"
    android:padding="5dip">


    <ImageView
        android:id="@+id/iv"
        android:layout_width="407dp"
        android:layout_height="136dp"
        android:gravity="center"
        app:srcCompat="@drawable/button" />

    <TextView
        android:id="@+id/title"
        android:layout_width="394dp"
        android:layout_height="205dp"
        android:layout_below="@id/iv"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="-19dp"
        android:gravity="center"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/ivp"
        android:layout_width="61dp"
        android:layout_height="64dp"
        android:layout_below="@id/title"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/m" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="64dp"
        android:layout_height="47dp"
        android:layout_below="@id/title"
        android:layout_centerInParent="true"
        android:layout_marginStart="81dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="-51dp"
        android:layout_toLeftOf="@id/ivm"
        android:layout_toRightOf="@id/ivp"
        android:text="0" />

    <ImageView
        android:id="@+id/ivm"
        android:layout_width="104dp"
        android:layout_height="58dp"
        android:layout_below="@id/title"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        app:srcCompat="@drawable/p" />


    <Button
        android:id="@+id/b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivm"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button"
        android:backgroundTint="#E63946"
        android:fontFamily="@font/boltsemibold"
        android:text="Update Quantity"
        android:textAlignment="center"
        android:textColor="#fafafa"
        android:textSize="21sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/m" />

    <TextView
        android:id="@+id/title1"
        android:layout_width="425dp"
        android:layout_height="31dp"

        android:layout_below="@id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-19dp"
        android:gravity="center"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <Button
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title1"
        android:background="@drawable/button"
        android:backgroundTint="#E63946"
        android:fontFamily="@font/boltsemibold"
        android:text="Extends Days"
        android:textAlignment="center"
        android:textColor="#fafafa"
        android:textSize="21sp" />
</RelativeLayout>